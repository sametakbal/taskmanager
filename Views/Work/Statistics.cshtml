
<canvas id="myChart"></canvas>


    @section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

    <script>
        $(document).ready(function () {
            setTimeout(loadChart, 1500);
        });
        function loadChart() {
            var ctx = document.getElementById('myChart').getContext('2d');
            fetch('/Work/Chart')
                .then(res => res.json())
                .then(list => {
                    $('#loadingicon').hide();
                    var myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: list.filter(f => f.day != null).map(item =>
                                item.day
                            ),
                            datasets: [{
                                label: '# Bitirilen görev sayısı',
                                data: list.map(item => item.count),
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(255, 159, 64, 0.2)'
                                ],
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                    'rgba(75, 192, 192, 1)',
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(153, 102, 255, 1)',
                                    'rgba(255, 159, 64, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });
                })
        }
    </script>
    }